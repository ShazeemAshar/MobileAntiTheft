<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.WebSetup"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:src="@drawable/web_setup_image"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="@string/web_setup_heading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:padding="10dp"/>

    <TextView
        android:padding="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="Visit www.MobileAntiTheft.000webhostapp.com, to perform above mentioned operations"/>

    <Button
        android:id="@+id/setupWebBtn"
        android:text="Setup Web Account"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:textStyle="bold"
        android:layout_margin="5dp"/>

</LinearLayout>
