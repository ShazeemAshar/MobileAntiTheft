<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androiddoctors.mobileantitheft.HomeActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="2">

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:arc_bottom_text="Security Level"
            custom:arc_bottom_text_size="15dp"
            custom:arc_finished_color="@color/white"
            custom:arc_stroke_width="7dp"
            custom:arc_text_color="@color/white"
            custom:arc_unfinished_color="@color/colorPrimary"
            custom:arc_max="100"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/antiTheftControl"
            android:text="Anti Theft Protection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/iconSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Hide App Icon" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/simRemovalSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Lock Phone On Sim Change/Removal" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/simChangeSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Inform Emergency Contacts On Sim Change" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/notificationSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Disable App Notifications" />
    </LinearLayout>
</LinearLayout>
